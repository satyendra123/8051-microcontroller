#EX-1 isme hum directly interface kar rhe hai led ko jo ki p2.0 par connect hai. isme hum led ko blink kara rhe hai
#include<reg52.h>
sbit LED_pin = P2^0;

void ms_delay(unsigned int ms)
{
     unsigned int i;
     for(i=0;i<=ms;i++);
}

void main()
{
     P2 = 0x00;
     while(1)
     {
          LED_pin = 1;
          ms_delay(50);
          LED_pin = 0;
          ms_delay(50);
     }
}

#EX-2 hum ek dusra code likhte hai jisme humare pass ek header file hoga aur header file me variable aur function already defined honge aur uska use hum kar sakte hai directly apne main.c file me. so hum isko dekhte hai kuch is tarah se
a) led_blinking.h
