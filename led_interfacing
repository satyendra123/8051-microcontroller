b) main.c
#include "AT89s52.h"
#include<reg52.h>

void ms_delay(unsigned int d)
{
     unsigned int i;
     for(i=0;i<=d;i++);
}

void main()
{
     while(1)
     {
          port_p0 = 1;
          delay(30000);
          port_p0 = 0;
          delay(30000);
     }
}
